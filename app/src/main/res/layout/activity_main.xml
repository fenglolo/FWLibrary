<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.fw.demo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="fenglolo"
        android:layout_gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_glide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/font_color_normal_weak"
                android:text="Glide组件使用"/>

            <Button
                android:id="@+id/btn_gifImageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/font_color_normal_input"
                android:text="gifImageview使用"/>

            <Button
                android:id="@+id/btn_anil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/font_color_click"
                android:text="安卓动画"/>

            <Button
                android:id="@+id/btn_test"
                android:layout_width="match_parent"
                android:background="@color/font_color_tuchu"
                android:layout_height="wrap_content"
                android:text="Test测试(复制粘贴)"/>

            <Button
                android:id="@+id/btn_roll"
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="wrap_content"
                android:text="安卓滚动字幕"/>

            <Button
                android:id="@+id/btn_md5"
                android:layout_width="match_parent"
                android:background="@color/font_color_click"
                android:layout_height="wrap_content"
                android:text="获取MD5"/>

            <EditText
                android:id="@+id/ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="时间"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>
